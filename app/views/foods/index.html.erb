<div class="page-header">
  <% child = Child.find_by(:id => cookies[:child_id]) %>
  <h1>
    <%= child.name %>'s Nutrition
  </h1>
  <a href="/foods/new" class="btn btn-lg btn-success">New Daily Nutrition Entry</a>

</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Fat Servings</th>
        <th>Dairy Servings</th>
        <th>Protein Servings</th>
        <th>Vegetable Servings</th>
        <th>Fruit Servings</th>
        <th>Grain Servings</th>
        <th>Actions</th>
      </tr>

      <% child.foods.each do |food| %>
      <tr>
        <td><%= food.date.strftime('%b %e, %Y') %></td>
        <td><%= food.fat %></td>
        <td><%= food.dairy %></td>
        <td><%= food.protein %></td>
        <td><%= food.vegetable %></td>
        <td><%= food.fruit %></td>
        <td><%= food.grain %></td>
        <td>
          <a href="/foods/<%= food.id %>" class="btn btn-primary">Show</a>
          <a href="/foods/<%= food.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_food/<%= food.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </tr>

      <tr>
        <td>
          <strong>Average</strong>
        </td>
        <td>
          <strong><%= @fats.sum.to_f/@fats.count %></strong>
        </td>
        <td>
          <strong><%= @dairy.sum.to_f/@dairy.count %></strong>
        </td>
        <td>
          <strong><%= @protein.sum.to_f/@protein.count %></strong>
        </td>
        <td>
          <strong><%= @vegetable.sum.to_f/@vegetable.count %></strong>
        </td>
        <td>
          <strong><%= @fruit.sum.to_f/@fruit.count %></strong>
        </td>
        <td>
          <strong><%= @grain.sum.to_f/@grain.count %></strong>
        </td>
      </tr>




  </table>
</div>
</div>
