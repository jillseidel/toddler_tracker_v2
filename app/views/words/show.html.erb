<div class="page-header">
  <% child = Child.find_by(:id => cookies[:child_id]) %>
  <h3><%= child.name %>'s Word Entry #<%= @word.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <dl class="dl-horizontal">

      <dt>Word</dt>
      <dd><%= @word.word_name %></dd>

      <dt>Method</dt>
      <dd><%= @word.method %></dd>

      <dt>Proficiency</dt>
      <dd><%= @word.proficiency %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/words" class="btn btn-primary">
        Back
      </a>
      <a href="/words/<%= @word.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_word/<%= @word.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
