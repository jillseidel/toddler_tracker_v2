<div class="page-header">
  <% child = Child.find_by(:id => cookies[:child_id]) %>
  <h1>
    <%= child.name %>'s Vocabulary
  </h1>
  <a href="/words/new" class="btn btn-lg btn-success">Add a New Word</a>

</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Date</th>
        <th>Word</th>
        <th>Method</th>
        <th>Proficiency</th>

        <th>Actions</th>
      </tr>



      <% child.words.each do |word| %>
      <tr>
        <td><%= word.date.strftime('%b %e, %Y') %></td>
        <td><%= word.word_name %></td>
        <td><%= word.method %></td>
        <td><%= word.proficiency %></td>



        <td>
          <a href="/words/<%= word.id %>" class="btn btn-primary">Show</a>
          <a href="/words/<%= word.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_word/<%= word.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
